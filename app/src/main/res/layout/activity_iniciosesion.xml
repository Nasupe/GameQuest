<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Iniciosesion">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="307dp"
        android:layout_height="49dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/caveat_brush"
        android:text="Inicio de sesi칩n"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="#0000EAFF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <EditText
            android:id="@+id/txt_iniciocorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/give_you_glory"
            android:hint="Introduce un correo electr칩nico"
            android:textStyle="bold"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/txt_iniciopass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/give_you_glory"
            android:textStyle="bold"
            android:hint="Contrase침a"
            android:inputType="textPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/bt_logearse"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#DEF1FD"
            android:layout_marginStart="100dp"
            android:text="Iniciar sesi칩n"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/bt_volver2"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#DEF1FD"
            android:layout_marginStart="100dp"
            android:text="Volver"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
